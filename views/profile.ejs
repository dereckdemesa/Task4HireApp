<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="logo">Task4Hire</div>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="/profile">Profile</a>
            <a href="/services">Services</a>
            <a href="/auth/logout">Log Out</a>
        </nav>
        <div id="menu-icon">â˜°</div>
    </header>
    <div class="container">
        <h2>Hello, <%= user.firstName %>!</h2>
        <p>Email: <%= user.email %></p>
        <p>Username: <%= user.username %></p>
        <p>Address: <%= address || 'Not specified' %></p>

        <h3>Your Booked Appointments:</h3>
        <div class="bookings">
            <% if (bookings.length > 0) { %>
                <% bookings.forEach(function(booking) { %>
                    <div class="booking-card">
                        <h4>Task: <%= booking.taskName %></h4>
                        <p>Date: <%= booking.date ? new Date(booking.date).toDateString() : 'Not specified' %></p>
                        <p>Status: <%= booking.status %></p>
                        <p>Address: <%= booking.address %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No appointments booked yet.</p>
            <% } %>
        </div>

        
        <form id="delete-profile-form" action="/auth/profile/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-small">Delete Account</button>
        </form>
    </div>
    <footer>
        <p>&copy; 2024 Task4Hire</p>
    </footer>

    <script src="/js/method-override.js"></script>
</body>
</html>
